@model SopiiTaiEi1.ViewModel.MeetingViewModel

@{
    ViewBag.Title = "Welcome";
    
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Calendar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StartingDate" class="control-label"></label>
                <input asp-for="StartingDate" class="form-control" />
                <span asp-validation-for="StartingDate" class="text-danger">@ViewBag.StartingDateErrorMessage</span>
            </div>
            <div class="form-group">
                <label asp-for="EndingDate" class="control-label"></label>
                <input asp-for="EndingDate" class="form-control" />
                <span asp-validation-for="EndingDate" class="text-danger">@ViewBag.EndingDateErrorMessage</span>
            </div>
            <div class="form-group">
                <input type="submit" value="Start" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

